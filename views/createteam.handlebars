<div class="ccontainer px-0 px-lg-2">
    {{!-- Name Input Row --}}
    <header class="row">
        {{!-- Name Input --}}
        <div class="col-12 text-center">
            <div class="input-group my-3">
                <input 
                    id="team-name" 
                    class="form-control form-control-lg" 
                    type="text" 
                    placeholder="Enter Team Name" 
                    aria-label="team-name"
                    {{#if team}}value="{{team.name}}" data-teamId="{{team.id}}"{{/if}}>
                {{#if team}}
                {{!-- Update Button --}}
                <button 
                    type="button" 
                    id="update-team" 
                    class="btn btn-secondary" 
                    data-bs-toggle="modal" 
                    data-bs-target="#createModal" disabled>Update Team
                </button>
                {{!-- Delete Button --}}
                <button 
                    type="button" 
                    id="delete-team" 
                    class="btn btn-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal" >Delete Team
                </button>
                {{else}}
                {{!-- Create Team --}}
                <button 
                    type="button" 
                    id="create-team" 
                    class="btn btn-secondary" 
                    data-bs-toggle="modal" 
                    data-bs-target="#createModal" disabled>Create Team
                </button>
                {{/if}}
            </div>    
        </div>
    </header>

    {{!-- Current Players Row --}}
    <div class="row mb-3">
        <div id="current-players" class="col d-flex justify-content-around">
            {{#each players as |player|}}
            <div class="on-team-card animate fadeIn" data-playerId="{{player.id}}">
                <span type="button" class="remove-player">x</span>
                <h5 class="on-team-name">{{player.player_name}}</h5>
            </div>
            {{/each}}
        </div>
    </div>

    {{!-- Search and Player Card Row --}}
    <div class="row">
        {{!-- Search and Select --}}
        <div class="col-12 col-lg-6">
            <form class="input-group mb-3">
                <input type="text" id="search-name" class="form-control" placeholder="Search Player" aria-label="Search Player" aria-describedby="button-addon2">
                <button type="button" id="search-players" class="btn btn-secondary">Search</button>
            </form>
            {{!-- Desktop player list --}}
            <div class="players-list text-center d-none d-lg-block">
            </div>
            {{!-- Mobile player list --}}
            <div id="players-list-mobile" class="players-list text-center collapse">
            </div>
        </div>
        {{!-- Player Card --}}
        <div class="col-12 col-lg-6">
            <div class="player-panel-wrap mt-lg-0 mt-3">
                <div id="player-panel" class="card">
                    <div class="card-header d-flex justify-content-center">
                        <img src="https://via.placeholder.com/100" id="player-image" alt="...">
                        <table class="table table-sm table-borderless text-white text-center">
                            <thead>
                                <tr>
                                    <th scope="col" colspan="2">Games Played</th>
                                    <th scope="col" colspan="2">Total Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="2" id="player-gp"></td>
                                    <td colspan="2" id="player-pts"></td>
                                </tr>
                                <tr>
                                    <th scope="col">Points</th>
                                    <th scope="col">Assists</th>
                                    <th scope="col">Rebounds</th>
                                    <th scope="col">FG %</th>
                                </tr>
                                <tr>
                                    <td id="player-ppg"></td>
                                    <td id="player-apg"></td>
                                    <td id="player-rpg"></td>
                                    <td id="player-fgp"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-body text-center">
                        <h3 id="player-name">Player Name</h3>
                        <button id="add-player" class="btn btn-dark">Add To Team</button>
                    </div>
                </div>
            </div>
        </div> 
    </div>

    {{!-- Create Team Modal --}}
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createTeamModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
               <div class="modal-header">
                   <h5 class="modal-title" id="create-modal-title">New Team Created!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-footer">
                    <a href="/create-team" class="btn btn-primary">New Team</a>
                    <a href="/game" class="btn btn-primary">Play Game</a>
                    <a href="/home" class="btn btn-primary">Home</a>
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete Team Modal --}}
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteTeamModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
               <div class="modal-header">
                   <h5 class="modal-title" id="delete-modal-title">Are you sure?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this team?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" id="delete-team-confirm" data-bs-dismiss="modal">Yes</button>
                    <button class="btn btn-danger" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>

